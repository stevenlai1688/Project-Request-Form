@model Project.Models.ProjectRequestViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutNoMenu.cshtml";
}

<h1>Edit the Request</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group-append mb-md-4">
                <label asp-for="RequestorName" class="control-label col-form-label"></label>
                <input type="text" asp-for="RequestorName" class="form-control mx-md-2" />
                @*Checking for validation*@
                <span asp-validation-for="RequestorName" class="text-danger "></span>

                <label asp-for="DesiredCompletionDate" class="control-label col-form-label"></label>
                <input asp-for="DesiredCompletionDate" class="form-control mx-md-2" />
                <span asp-validation-for="DesiredCompletionDate" class="text-danger "></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestChanges" class="control-label"></label>
                <span asp-validation-for="RequestChanges" class="text-danger"></span>
                <textarea asp-for="RequestChanges" class="form-control"> </textarea>
            </div>
            <div class="form-group">
                <label asp-for="RequestReason" class="control-label"></label>
                <span asp-validation-for="RequestReason" class="text-danger"></span>
                <textarea asp-for="RequestReason" class="form-control"> </textarea>
            </div>
            <div class="form-group">
                <label asp-for="RequestDescription" class="control-label"></label>
                <span asp-validation-for="RequestDescription" class="text-danger"></span>
                <textarea asp-for="RequestDescription" class="form-control"> </textarea>
            </div>

            <div class="form-group">
                <label asp-for="RequestEffectsOnOrganization" class="control-label"></label>
                <span asp-validation-for="RequestEffectsOnOrganization" class="text-danger"></span>
                <textarea asp-for="RequestEffectsOnOrganization" class="form-control"> </textarea>
            </div>
            <div class="form-group">
                <label asp-for="EstimateTimeFrame" class="control-label"></label>
                <span asp-validation-for="EstimateTimeFrame" class="text-danger"></span>
                <textarea asp-for="EstimateTimeFrame" class="form-control"> </textarea>
            </div>
            @*Priority Level*@
            @{
                List<string> priorityLevel = new List<string>();
                priorityLevel.Add("Low");
                priorityLevel.Add("Medium");
                priorityLevel.Add("High");
                priorityLevel.Add("Emergency");
            }
            <div class="col-form-label">
                <label asp-for="PriorityLevel" class="control-label">Priority Level</label>
                @foreach (var priority in priorityLevel)
                {
                    <div class="form-check">
                        <label><input asp-for="PriorityLevel" type="radio" value="@priority.ToString()" />@priority.ToString()</label>

                    </div>
                }
            </div>
            @*CostCenter*@
            <div class="form-group">

                <label asp-for="DepartmentsId" class="control-label">Department</label>
                <select asp-for="DepartmentsId" name="DepartmentsId[]" class="form-control" asp-items="ViewBag.CostCenters">
                </select>
                <span asp-validation-for="DepartmentsId" class="text-danger"></span>
            </div>

            @*Business Justification*@
            <label asp-for="BusinessJustification" class="col-form-label text-wrap">Business Justification and Strategic Benefit</label>
            <div class="input-group form-check-inline col-form-label-lg">
                @{
                    List<string> justifications = new List<string>();
                    justifications.Add("Cost Savings");
                    justifications.Add("Increased Revenue");
                    justifications.Add("Increased Efficiencies");
                    justifications.Add("Regulatory");
                    justifications.Add("Compliance");
                    justifications.Add("Upgrade");
                    justifications.Add("Retention");

                    foreach (string value in justifications)
                    {
                        <label><input class="input-group-sm mx-2" type="checkbox" value="@value.ToString()" name="BusinessJustification[]" />@value.ToString()</label>
                    }

                }
                <span asp-validation-for="BusinessJustification" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
