<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project Request</title>

    <link href="~/lib/bootstrap-theme-bootswatch-paper/css/paper.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <link href="~/lib/richText/richtext.min.css" rel="stylesheet" />

    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Montserrat">

    @RenderSection("Styles", false)

</head>
<body style="font-family: 'Montserrat', sans-serif">
    <nav class="navbar navbar-inverse navbar-expand p-4">
        <div class="container-nav">
            <div class=" navbar-header">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <img src="~/img/AxiaLogo.png" alt="Axia Logo" />
                </a>
            </div>

            <ul class="nav navbar-nav" role="button">

                <li class="dropdown">
                    <a class="dropdown-toggle " data-toggle="dropdown">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                    </a>
                    <ul class="dropdown-menu">

                        <li>
                            <a asp-controller="ProjectRequest" asp-action="Index">ProjectRequest</a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a asp-area="AzureAD" asp-controller="Account" asp-action="SignOut">Sign out</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a asp-area="AzureAD" asp-controller="Account" asp-action="SignIn">Sign In</a>
                            </li>
                        }
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">

        @RenderBody()

        <footer class="border-top modal-footer text-muted">
            <div class="container">
                &copy; @DateTime.Now.Year - ProjectRequest - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/richText/jquery.richtext.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", false)
</body>
</html>
